generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  title     String
  body      String
  userId    String
  createdAt DateTime @default(now())
  location  Unsupported("geometry(Point,4326)") // PostGIS対応

  @@map("posts")
}
